{
  "name": "@darksoil-studio/messenger-zome",
  "version": "0.1.0",
  "scripts": {
    "start": "vite --clearScreen false --port $UI_PORT",
    "build": "pnpm lint && tsc && pnpm analyze",
    "lint": "eslint src && prettier \"src/**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint src --fix && prettier \"src/**/*.ts\" --write --ignore-path .gitignore",
    "localize:extract": "lit-localize extract",
    "localize:build": "lit-localize build",
    "analyze": "cem analyze --litelement --exclude dist",
    "prepare": "tsc && pnpm localize:build && pnpm analyze"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "locales",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darksoil-studio/messenger-zome.git"
  },
  "exports": {
    ".": "./dist/index.js",
    "./dist/*": "./dist/*",
    "./locales/*": "./locales/*"
  },
  "dependencies": {
    "@holochain/client": "^0.17.1",
    "@darksoil-studio/profiles-zome": "github:darksoil-studio/profiles-zome#7be81aa520ece699b5c3c4421e5db110d9bb01e4&path:ui",
    "@tnesh-stack/elements": "^0.300.0",
    "@tnesh-stack/signals": "^0.300.0",
    "@tnesh-stack/utils": "^0.300.0",
    "@lit/context": "^1.0.0",
    "@lit/localize": "^0.12.0",
    "@mdi/js": "^7.2.0",
    "@msgpack/msgpack": "^2.8.0",
    "@shoelace-style/shoelace": "^2.11.0",
    "lit": "^3.0.0",
    "@darksoil-studio/linked-devices-zome": "github:darksoil-studio/linked-devices#39dc726ad15f8033ae5ae74cbd1fac894b9e6eeb&path:ui",
    "@darksoil-studio/notifications-zome": "github:darksoil-studio/notifications-zome#b41f7b7644c68e7103dece39e50a19fd82496864&path:ui"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@lit/localize-tools": "^0.6.3",
    "typescript": "^5.4.5",
    "tslib": "^2.6.2",
    "vite": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json",
  "type": "module"
}